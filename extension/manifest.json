{
  "manifest_version": 3,
  "name": "2FA Studio",
  "version": "1.0.0",
  "description": "Secure two-factor authentication codes for all your accounts",
  "author": "2FA Studio Team",
  
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms",
    "clipboardWrite",
    "contextMenus"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "2FA Studio - Click to view codes"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "styles/*",
        "src/injected.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Open 2FA Studio popup"
    },
    "copy-current-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy current 2FA code"
    },
    "scan-qr": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Scan QR code on current page"
    }
  },
  
  "options_page": "options.html",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  
  "minimum_chrome_version": "88"
}