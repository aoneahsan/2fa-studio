# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012
VITE_FIREBASE_MEASUREMENT_ID=G-ABCDEF123456

# Environment
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="2FA Studio"

# API Configuration
VITE_API_BASE_URL=https://your-project-id.firebaseapp.com/api
VITE_FUNCTIONS_BASE_URL=https://us-central1-your-project-id.cloudfunctions.net

# Security Configuration
VITE_ENCRYPTION_KEY_ID=prod-key-id
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=900000

# Google Drive API
VITE_GOOGLE_DRIVE_CLIENT_ID=123456789012-abcdef123456789012345678901234567890.apps.googleusercontent.com
VITE_GOOGLE_DRIVE_API_KEY=your-google-drive-api-key
VITE_GOOGLE_DRIVE_APP_ID=your-google-drive-app-id

# Analytics & Monitoring
VITE_SENTRY_DSN=https://abcdef123456789012345678901234567890@sentry.io/1234567
VITE_GOOGLE_ANALYTICS_ID=G-ABCDEF123456
VITE_HOTJAR_ID=1234567
VITE_MIXPANEL_TOKEN=abcdef123456789012345678901234567890

# OneSignal Push Notifications
VITE_ONESIGNAL_APP_ID=your-onesignal-app-id

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_abcdef123456789012345678901234567890123456789012345678901234567890
VITE_STRIPE_WEBHOOK_SECRET=whsec_123456789012345678901234567890123456789012

# Feature Flags
VITE_ENABLE_PREMIUM_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_BIOMETRIC_AUTH=true
VITE_ENABLE_GOOGLE_DRIVE_BACKUP=true
VITE_ENABLE_BROWSER_EXTENSION=true

# Performance & Optimization
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CDN=true
VITE_CDN_BASE_URL=https://cdn.your-domain.com

# Social Authentication
VITE_GOOGLE_CLIENT_ID=123456789012-abcdef123456789012345678901234567890.apps.googleusercontent.com
VITE_FACEBOOK_APP_ID=123456789012345
VITE_GITHUB_CLIENT_ID=abcdef123456789012345
VITE_APPLE_CLIENT_ID=com.your-domain.2fa-studio

# PWA Configuration
VITE_PWA_NAME="2FA Studio"
VITE_PWA_SHORT_NAME="2FA Studio"
VITE_PWA_DESCRIPTION="Secure Two-Factor Authentication Manager"
VITE_PWA_THEME_COLOR=#1e40af
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Security Headers
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CSP_REPORT_URI=https://your-project-id.firebaseapp.com/api/csp-report

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_STORAGE_KEY=rl_2fa_studio

# Backup Configuration
VITE_MAX_BACKUP_SIZE_MB=50
VITE_BACKUP_RETENTION_DAYS=90
VITE_AUTO_BACKUP_ENABLED=true

# Browser Extension
VITE_EXTENSION_ID=abcdefghijklmnopqrstuvwxyz123456
VITE_EXTENSION_UPDATE_URL=https://clients2.google.com/service/update2/crx

# Mobile App Configuration
VITE_MOBILE_DEEP_LINK_SCHEME=2fastudio
VITE_MOBILE_APP_STORE_URL=https://apps.apple.com/app/2fa-studio/id123456789
VITE_MOBILE_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.2fastudio.app

# Admin Configuration
VITE_ADMIN_EMAIL=admin@your-domain.com
VITE_SUPPORT_EMAIL=support@your-domain.com
VITE_PRIVACY_POLICY_URL=https://your-domain.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# Debugging & Development
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_ENABLE_REDUX_DEVTOOLS=false