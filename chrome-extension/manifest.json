{
  "manifest_version": 3,
  "name": "2FA Studio",
  "version": "1.0.0",
  "description": "Secure 2FA authenticator with browser integration",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "scripting"
  ],
  "options_page": "options/settings-enhanced.html",
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://localhost/*"
      ],
      "js": ["src/content-script.js"],
      "css": ["src/content-styles.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/injected.js", "src/qr-detector.js"],
      "matches": ["https://*/*", "http://localhost/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open 2FA Studio popup"
    },
    "fill-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Fill 2FA code in current field"
    },
    "scan-qr": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Scan QR code on page"
    },
    "copy-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy 2FA code to clipboard"
    },
    "quick-fill": {
      "suggested_key": {
        "default": "Ctrl+Shift+Enter",
        "mac": "Command+Shift+Enter"
      },
      "description": "Quick fill with auto-detected account"
    },
    "open-settings": {
      "description": "Open extension settings"
    },
    "toggle-auto-fill": {
      "description": "Toggle auto-fill mode"
    }
  }
}